<% if post.liked_by?(current_user) %>
  <div>
    <%= link_to post_likes_path(post), method: :delete do %>
      <span style="color: white;">いいね！ <%= post.likes.count %> <i class="fas fa-heart" style="color: red;"></i></span>
    <% end %>
  </div>
<% else %>
  <div>
    <%= link_to post_likes_path(post), method: :post do %>
      <span style="color: white;">いいね <%= post.likes.count %> <i class="fas fa-heart" style="color: white;"></i></span>
    <% end %>
  </div>
<% end %>