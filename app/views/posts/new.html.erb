<div class="body">
	<a href="/">
		<img src="<%= asset_path "DiveLink_logo.png" %>" width="250px">
	</a>
	<div class="container">
		<div class="row">
			<div class="col-xs-6 col-xs-offset-3" style="text-align: center;">
				<div class="form-area">
					<h2 style="margin-bottom: 20px;">新規投稿</h2>
					<%= form_for(@post) do |f| %>
						<table class="table">
							<tr>
								<th>メイン写真</th>
								<td><%= f.attachment_field :main_image, placeholder: "image" %></td>
							</tr>
							<tr>
								<th>題名</th>
								<td><%= f.text_field :title, class: "form-control", style:"width: 70%;" %></td>
							</tr>
							<tr>
								<th>本文</th>
								<td><%= f.text_area :body, class: "form-control", style:"width: 100%; height: 400px;" %></td>
							</tr>
						</table>
						<%= f.submit class: "btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>