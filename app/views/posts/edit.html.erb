<div class="body">
	<a href="/">
		<img src="/assets/DiveLink_logo.png" width="250px">
	</a>
	<div class="container">
		<div class="row">
			<div class="col-xs-6 col-xs-offset-3" style="text-align: center;">
				<div class="form-area">
					<h2>ブログ編集</h2>
					<%= form_for(@post) do |f| %>
					  <table class="table">
					  	<tr>
					  		<th>メイン画像</th>
					  		<td><%= f.attachment_field :main_image, placeholder: "image" %></td>
					  	</tr>
					  	<tr>
					  		<th>題名</th>
					  		<td><%= f.text_field :title, class: "form-control", style: "width: 70%;" %></td>
					  	</tr>
					  	<tr>
					  		<th>本文</th>
					  		<td><%= f.text_area :body, class: "form-control", style: "width: 70%;" %></td>
					  	</tr>
					  </table>
					  <%= f.submit '保存', class: "btn btn-default" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>