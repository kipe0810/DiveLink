<div class="body">
	<a href="/">
		<img src="<%= asset_path "DiveLink_logo.png" %>" width="250px">
	</a>
	<div class="container">
		<div class="row">
			<div class="col-xs-6 col-xs-offset-3" style="text-align: center;">
				<div class="form-area">
					<h2>ブログ編集</h2>
					<%= form_for(@post) do |f| %>
					  <table class="table">
					  	<tr>
					  		<th>メイン画像</th>
					  		<td><%= f.attachment_field :main_image, placeholder: "image" %></td>
					  	</tr>
					  	<tr>
					  		<th>ポイント</th>
					  		<td><%= f.select :point_id, Point.all.map {|point| [point.point_name, point.id] }, :prompt => "選択する" %></td>
					  	</tr>
					  	<tr>
					  		<th>題名</th>
					  		<td><%= f.text_field :title, class: "form-control", style: "width: 70%;" %></td>
					  	</tr>
					  	<tr>
					  		<th>本文</th>
					  		<td><%= f.text_area :body, class: "form-control", style: "width: 100%; height: 400px;" %></td>
					  	</tr>
					  	<tr>
					  		<th>ブログ画像</th>
					  		<td><%= f.attachment_field :post_images_images, multiple: true %></td>
					  	</tr>
					  </table>
					  <%= f.submit '保存', class: "btnwhite" %><br><br>
					<% end %>
					<strong><%= link_to '＜ブログへ戻る', post_path(@post), style: "text-decoration: none; color: #0066FF;" %></strong>
				</div>
			</div>
		</div>
	</div>
</div>