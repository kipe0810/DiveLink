<%= render 'layouts/header' %>
<div class="main-image-area">
	<div class="main-image">
		<%= image_tag attachment_url(@point, :point_image, :fill, 1440, 670, fallback: "no_image.png"), size: '1440x670', class: "post-main-image" %>
	</div>
	<h1 class="title" style="font-size: 60px;"><strong><%= @point.point_name %></strong></h1>
</div>
<div>
	<div class="container">
		<p style="margin: 20px 0 40px 0;"><strong><%= link_to 'ダイビングスポットを探す', genres_path, style: "color: #0066FF; text-decoration: none;" %></strong>　＞　<strong><%= link_to @point.genre.name, genre_path(@point.genre), style: "color: #0066FF; text-decoration: none;" %></strong>　＞</p>
		<div class="col-xs-10 col-xs-offset-1">
			<p style="font-size: 20px;"><%= @point.point_body %></p>
		</div>
	</div>
	<div class="container" style="margin-top: 50px; margin-bottom: 30px;">
		<p style="font-size: 20px; float: left; text-align: left;"><strong><%= link_to '＜前のスポット', point_path(id: @backpoint), style: "color: #0066FF; text-decoration: none;" %></strong></p>
		<p style="font-size: 20px; text-align: right;"><strong><%= link_to '次のスポット＞', point_path(id: @nextpoint), style: "color: #0066FF; text-decoration: none;" %></strong></p>
	</div>
	<div style="width: 100%; background-color: #EEEEEE; padding: 15px 0 30px 0; ">
		<div class="container" style="margin-top: 50px;">
			<div class="row">
				<h2 style="text-align: center;"><strong><%= @point.point_name %>のブログ</strong></h2>
				<div class="border"></div>
				<% if @posts.present? %>
				  <%= render 'posts/index', posts: @posts_randum %>
				  <% if @posts.count > 4 %>
				    <div>
				    	<strong><%= link_to 'もっと見る＞', point_posts_path(@point.id), class: "signintop-link2" %></strong>
				    </div>
				  <% end %>
				<% else %>
					<span>
						<h4 style="text-align: center; font-size: 20px; margin-bottom: 50px;"><strong><%= @point.point_name %>のブログはまだありません。</strong></h4>
					</span>
				<% end %>
			</div>
		</div>
	</div>
</div>


<%= render 'layouts/footer' %>