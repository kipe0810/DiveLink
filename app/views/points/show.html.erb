<%= render 'layouts/header' %>
<div class="main-image-area">
	<div class="main-image">
		<%= image_tag attachment_url(@point, :point_image, :fill, 1440, 670, fallback: "no_image.png"), size: '1440x670', class: "post-main-image" %>
	</div>
	<h1 class="title" style="font-size: 60px;"><strong><%= @point.point_name %></strong></h1>
</div>
<div style="margin-bottom: 30px;">
	<div class="container">
		<p style="margin: 20px 0 40px 0;"><%= link_to 'ダイビングスポットを探す', genres_path, style: "color: #3399FF; text-decoration: none;" %>　＞　<%= link_to @point.genre.name, genre_path(@point.genre), style: "color: #3399FF; text-decoration: none;" %>　＞</p>
		<div class="col-xs-10 col-xs-offset-1">
			<p style="font-size: 20px;"><%= @point.point_body %></p>
		</div>
	</div>
	<div class="container" style="margin-top: 50px;">
		<p style="font-size: 20px; float: left; text-align: left;"><%= link_to '＜前のスポット', point_path(id: @backpoint), style: "color: #3399FF; text-decoration: none;" %></p>
		<p style="font-size: 20px; text-align: right;"><%= link_to '次のスポット＞', point_path(id: @nextpoint), style: "color: #3399FF; text-decoration: none;" %></p>
	</div>
	<div class="container" style="margin-top: 50px;">
		<div class="row">
			<h2 style="text-align: center;"><strong><%= @point.point_name %>のブログ</strong></h2>
			<div class="border"></div>
			<% if @posts.present? %>
			  <%= render 'posts/index', posts: @posts %>
			<% else %>
				<span>
					<h4 style="text-align: center; font-size: 20px; margin-bottom: 50px;"><strong><%= @point.point_name %>のブログはまだありません。</strong></h4>
				</span>
			<% end %>
		</div>
	</div>
</div>


<%= render 'layouts/footer' %>