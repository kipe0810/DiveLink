<div class="row" style="margin-bottom: 50px;">
	<div class="col-xs-4 col-xs-offset-1">
		<%= image_tag attachment_url(gp, :point_image, :fill, 300, 250, fallback: "no_image.png"), size:'300x250' %>
	</div>
	<div class="col-xs-6" style="margin-left: 50px;">
		<table class="table-borderless">
		  <tr>
		  	<th style="font-size: 25px;"><%= gp.point_name %></th>
		  </tr>
		  <tr>
		  	<td><%= gp.point_body.truncate(290, omission: '.....') %></td>
		  </tr>
		</table>
		<p style="text-align: right;"><%= link_to '詳しく見る＞', point_path(gp) %></p>
	</div>
</div>