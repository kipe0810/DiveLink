
	<% @points.each do |p| %>
	<div class="row" style="margin-bottom: 50px;">
		<div class="col-xs-3 col-xs-offset-1">
			<%= image_tag attachment_url(p, :point_image_id, :fill, 300, 250, fallback: "no_image.png"), size:'300x250' %>
		</div>
		<div class="col-xs-7" style="margin-left: 50px;">
			<table class="table">
			  <tr>
			  	<th><%= p.point_name %></th>
			  </tr>
			  <tr>
			  	<td><%= p.point_body %></td>
			  </tr>
			</table>
		</div>
	</div>
	<% end %>