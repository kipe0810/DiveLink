<div class="body">
  <a href="/">
    <img src="<%= asset_path "DiveLink_logo.png" %>" width="250px">
  </a>
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3" style="text-align: center;">
        <div class="form-area">
          <h2 class="devise-headline">新規会員登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <table class="table">
              <tr>
                <th>名前</th>
                <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", style:"width: 70%;" %></td>
              </tr>
              <tr>
                <th>ニックネーム</th>
                <td><%= f.text_field :nick_name, autocomplete: "nick_name", class: "form-control", style:"width: 70%;" %></td>
              </tr>
              <tr>
                <th>Eメールアドレス</th>
                <td><%= f.email_field :email, autocomplete: "email", class: "form-control", style:"width: 70%;" %></td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td><%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control", style:"width: 70%;" %></td>
              </tr>
              <tr>
                <th>都道府県</th>
                <td><%= f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, id: "user_prefecture", class: "form-control", :prompt =>"" %></td>
              </tr>
              <tr>
                <th>市町村</th>
                <td><%= f.text_field :city, autocomplete: "city", class: "form-control", id: "user_city", style:"width: 70%;　text-aline: left;" %></td>
              </tr>
              <tr>
                <th>丁番地建物名</th>
                <td><%= f.text_field :street, autocomplete: "street", class: "form-control", id: "user_street", style:"width: 70%;" %></td>
              </tr>
              <tr>
                <th>パスワード</th>
                <td>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style:"width: 70%;" %>
                </td>
              </tr>
              <tr>
                <th>パスワード確認</th>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style:"width: 70%;" %></td>
              </tr>
            </table>
            <%= f.submit "登録", class: "btnwhite" %><br><br>
            <%= link_to "ログイン画面へ", new_user_session_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
