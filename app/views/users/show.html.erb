<%= render 'layouts/header' %>
<div class="container">
	<div class="profile row">
			<div class="col-xs-3 col-xs-offset-2">
				<div class="profile-image-show"></div>
				<%= image_tag attachment_url(@user, :profile_image, :fill, 300, 300, fallback: "no_image.png"), size: '300x300' %>
			</div>
			<div class="profile-table col-xs-5">
				<h2 class="profile-headline">Profile</h2>
				<%= link_to "フォロー", follows_user_path(@user.id) %> <%= @user.followings.count %>
				 | <%= link_to "フォロワー", followers_user_path(@user.id) %> <%= @user.followers.count %>
				<% if @user == current_user %>
					  <%= link_to '編集', edit_user_path(@user), class: "btn btn-primary" %>
				<% else %>
				  <% if @user.followed_by?(current_user) %>
					  <%= link_to "フォロー済み", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
					<% else %>
					  <%= link_to "フォロー", user_relationships_path(@user.id), method: :post, class: "btn btn-default" %>
					<% end %>
				<% end %>
				<table class="table" style="table-layout:fixed;width:100%;">
					<tr>
						<th>ニックネーム</th>
						<td><%= @user.nick_name %></td>
					</tr>
					<% if @user == current_user %>
						<tr>
							<th>名前</th>
							<td><%= @user.name %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td>
								〒<%= @user.postal_code %><br>
								<%= @user.prefecture %><%= @user.city %><%= @user.street %></td>
						</tr>
					<% end %>
					<tr>
						<th>年齢</th>
						<td><%= @user.age %></td>
					</tr>
					<tr>
						<th>性別</th>
						<td><%= @user.gender %></td>
					</tr>
					<tr>
						<th>自己紹介</th>
						<td style="word-wrap:break-word;"><%= @user.introduction %></td>
					</tr>
				</table>
			</div>
	</div>

  <div class="row">
  	<h2 style="text-align: center; margin: 70px 0 40px 0;"><%= @user.nick_name %>さんのブログ</h2>
  	<%= render 'posts/index', posts: @posts %>
  </div>

</div>